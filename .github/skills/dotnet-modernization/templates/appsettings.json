{
  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:${DB_SERVER}.database.windows.net,1433;Database=${DB_NAME};Authentication=Active Directory Default;",
    "Redis": "${REDIS_CONNECTION_STRING}"
  },

  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "${AZURE_TENANT_ID}",
    "ClientId": "${AZURE_CLIENT_ID}",
    "Audience": "api://${AZURE_CLIENT_ID}"
  },

  "KeyVault": {
    "VaultUri": "https://${KEY_VAULT_NAME}.vault.azure.net/"
  },

  "ApplicationInsights": {
    "ConnectionString": "${APPLICATIONINSIGHTS_CONNECTION_STRING}"
  },

  "AppSettings": {
    "ApiBaseUrl": "https://api.example.com",
    "MaxPageSize": 100,
    "DefaultCacheMinutes": 5
  },

  "FeatureFlags": {
    "EnableNewFeature": false
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },

  "AllowedHosts": "*"
}
