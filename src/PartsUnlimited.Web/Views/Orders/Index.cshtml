@model PartsUnlimited.ViewModels.OrdersViewModel
@{
    ViewData["Title"] = "My Orders";
}
<h2>My Orders</h2>
@if (!Model.Orders.Any())
{
    <p>No orders found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Date</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model.Orders)
            {
                <tr>
                    <td>@o.OrderId</td>
                    <td>@o.OrderDate.ToString("d")</td>
                    <td>@o.Total.ToString("C")</td>
                    <td><a asp-action="Details" asp-route-id="@o.OrderId">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
}
