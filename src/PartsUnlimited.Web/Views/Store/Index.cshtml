@model IEnumerable<PartsUnlimited.Models.Category>
@{
    ViewData["Title"] = "Shop";
}
<section class="section-alt product-list">
    <h2>Browse Categories</h2>
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="list-item-part">
                    <a asp-controller="Store" asp-action="Browse" asp-route-categoryId="@category.CategoryId" title="@category.Name">
                        <h5>@category.Name</h5>
                    </a>
                </div>
            </div>
        }
    </div>
</section>
