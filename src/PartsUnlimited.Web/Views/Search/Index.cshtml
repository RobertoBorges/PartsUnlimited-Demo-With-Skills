@model PartsUnlimited.ViewModels.SearchViewModel
@{
    ViewData["Title"] = "Search: " + Model.SearchQuery;
}
<h2>Search results for "@Model.SearchQuery"</h2>

@if (!Model.Products.Any())
{
    <p>No products found.</p>
}
else
{
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-3">
                <div class="list-item-part">
                    <a asp-controller="Store" asp-action="Details" asp-route-id="@product.ProductId">
                        <img src="/Images/@product.ProductArtUrl" alt="@product.Title" class="img-responsive" />
                        <h5>@product.Title</h5>
                        <p>@product.Price.ToString("C")</p>
                    </a>
                </div>
            </div>
        }
    </div>
}
